# write code for sort an element using numpy.

import numpy as np

s=np.array([12,34,23])
s.sort()
print(s)

# write code to using Numpy to sort each column of 2-D Array.
import numpy as np

a=np.array([[112,2,93,94],[84,1160,788,8],[900,1,118,192]])
for i in range(len(a)):
    for j in range(len(a)):
        a.sort()
    print(a[i])



# write code in python for arrage the element

import numpy as np

print(np.arange(4))
print(np.copy(np.arange(4)))
print(reversed(np.copy(np.arange(4))))


# write code in python to impliment argsoft in numpy pandas.

import numpy as np

x= np.array([[1,2],[3,4]])
y=np.array([[5,6]])
print(x+y)


# write code in python for making 2 D array into 1 D array
import numpy as np
a=np.array([[1,2,3],[2,3,4],[3,4,5],[4,5,6]])
b= a.reshape(6,2)
print(b)



